<Window x:Class="Trabajo_Final_Taller2.vistas.HacerPregunta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trabajo_Final_Taller2.vistas"
        mc:Ignorable="d"
        Title="HacerPregunta" Height="391" Width="544.5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tituloPreg" HorizontalAlignment="Left" Height="23" Margin="25,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="263" TextChanged="tituloPreg_TextChanged"/>
        <TextBox x:Name="Descripcion" HorizontalAlignment="Left" Height="64" Margin="25,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="505"/>
        <TextBox x:Name="imagen" HorizontalAlignment="Left" Height="23" Margin="80,186,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="235"/>
        <Button x:Name="cancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="25,286,0,0" VerticalAlignment="Top" Width="75" Click="cancelar_Click" Height="22"/>
        <Button x:Name="preguntar" Content="Preguntar" HorizontalAlignment="Left" Margin="185,286,0,0" VerticalAlignment="Top" Width="75" Click="preguntar_Click" Height="22"/>
        <Label x:Name="label" Content="Pregunta&#xD;&#xA;" HorizontalAlignment="Left" Margin="25,25,0,0" VerticalAlignment="Top" Width="75" Height="26"/>
        <Label x:Name="label1" Content="Imagen" HorizontalAlignment="Left" Margin="25,184,0,0" VerticalAlignment="Top" Height="26" Width="50"/>
        <Label x:Name="label2" Content="Descripción" HorizontalAlignment="Left" Margin="25,84,0,0" VerticalAlignment="Top" Height="26" Width="72"/>

    </Grid>
</Window>
